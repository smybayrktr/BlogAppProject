@model IEnumerable<BlogCardResponse>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" style="max-width:800px; margin: auto; margin-bottom:200px " >
        Beğendiğiniz Bir Blog Yazısı Yok :(
    </div>
}
else
{
    @foreach (var blog in Model)
    {
            <div class="col-md-6">
                <partial name="_BlogCard" model="blog" />
            </div>
     

    }

}
