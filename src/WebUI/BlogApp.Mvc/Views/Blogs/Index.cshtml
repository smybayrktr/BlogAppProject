@model LikedBlog

@if (Model.LikedBlogs.Count == 0)
{
    <div class="alert alert-danger">
        Sepetinizde Kurs Yok!
    </div>
}
else
{
    @foreach (var blog in Model.LikedBlogs)
    {
        <div class="fh5co-blog animate-box">
            <div class="title text-center">
                <span class="posted-on">Nov. 15th 2016</span>
                <h3><a href="#">@blog.BlogCard.Title</a></h3>
                <span class="category"></span>
            </div>
            <a href="#"><img class="img-responsive" src=@blog.BlogCard.Image alt=""></a>
            <div class="blog-text text-center">
                <p>@blog.BlogCard.Body</p>
            </div>
        </div>

    }

}
