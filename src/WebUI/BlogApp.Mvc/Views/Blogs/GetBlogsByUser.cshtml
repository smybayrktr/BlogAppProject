
@model IEnumerable<BlogCardResponse>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div style="margin-top: 40px" class="col-md-12 col-md-offset-0 text-center fh5co-heading fh5co-heading-sidebar">
                    <h2><span>Blog Yazıları</span></h2>
                </div>
                @foreach (var blog in Model)
                {
                    <div class="col-md-6">
                        <div class="fh5co-blog animate-box">
                            <div class="title text-center">
                                <span class="posted-on">@DateHelper.ToStringFormat(blog.CreatedAt)</span>
                                <h3><a href="#">@blog.Title</a></h3>
                                <span class="category"></span>
                            </div>
                            <a href="#"><img class="img-responsive" src="~/@blog.Image" alt=""></a>
                            <div class="blog-text text-center">
                                <p>@StringHelper.RemoveHtml(blog.Body)</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
